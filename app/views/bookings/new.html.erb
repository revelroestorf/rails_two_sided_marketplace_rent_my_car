<div class="m-5">
<br>
  <h3>Check your booking details</h3>

  <div class="row mt-5 d-flex justify-content-around">

    <div class="mb-5">
      <div class="">
        <span class="text-muted"><%= "#{@car.user.firstname.capitalize}'s" %></span>
        <span class="lead"><%= "#{@car.make.capitalize} #{@car.model.capitalize}" %></span>
      </div>
        <%= image_tag "#{@car.model.downcase}.jpeg", class: "img-thumbnail", style: "width: 400px;" %>
    </div>

    <table class="table d-flex align-items-center" style="width:400px">
      <tbody>
        <tr>
          <th scope="row">Located at:</th>
          <td><%= @car.full_address %></td>
        </tr>
        <tr>
          <th scope="row">Price per km:</th>
          <td><%= number_to_currency(@car.price_per_km) %><span class="text-muted"> (pay later)</span></td>
        </tr>
        <tr>
          <th scope="row">Price per day:</th>
          <td><%= number_to_currency(@car.price_per_day) %></td>
        </tr>
        <tr>
          <th scope="row">Days:</th>
          <td><%= @days %></td>
        </tr>
        <tr>
          <th scope="row">Payment due:</th>
          <td><%= number_to_currency(@car.price_per_day * @days.to_i) %></td>
        </tr>
      </tbody>
    </table>

  </div>

  <div class="row">
  </div>

  <div class="mt-5 mx-sm-5 d-flex justify-content-between">
    <span><%= link_to 'go back', car_path(@car), class: "btn btn-dark", style: "color: white; width:90px;" %></span>
    <span>
      <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>
      </article>
      <%= hidden_field_tag :car_id, @car.id %>
      <%= hidden_field_tag :days, @cdays %>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="A month's subscription"
              data-amount="<%= @car.price_per_day * 100 %>"
              data-locale="auto">
      </script>
    </span>
  </div>

  <% end %>

  <br>
  <br>



</div>
