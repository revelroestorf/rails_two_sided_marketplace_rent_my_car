<!DOCTYPE html>
<html>
  <head>
    <title>RentMyCar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>

  <body>

    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
      <a><%= link_to 'Rent My Car', root_path, class: "nav-link navbar-brand" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse p-2 justify-content-end" id="navbarNav">
        <ul class="navbar-nav d-flex">
          <% if user_signed_in? %>
            <li class="nav-item mr-5">
              <a class="nav-link" style="color: white" href="#pricing"><%= "logged in as #{current_user.firstname}" %></a>
            </li>
          <% end %>
          <li class="nav-item mr-5">
            <a class="nav-link" style="color: white" href="#how-it-works">How it works</a>
          </li>
          <li class="nav-item mr-5">
            <a class="nav-link" style="color: white" href="#pricing">Pricing</a>
          </li>
          <% if @trips %>
            <li class="nav-item mr-5">
              <a><%= link_to 'My trips', bookings_guest_trips_path, class: "nav-link", style: "color: white;" %></a>
            </li>
          <% end %>
          <% if @bookings %>
            <li class="nav-item mr-5">
              <a><%= link_to 'My bookings', bookings_owner_bookings_path, class: "nav-link", style: "color: white;" %></a>
            </li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item mr-5">
              <a><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "nav-link", style: "color: white;" %></a>
            </li>
          <% else %>
            <li class="nav-item mr-5">
              <a><%= link_to 'login', new_user_session_path, class: "nav-link", style: "color: white;" %></a>
            </li>
            <li class="nav-item mr-5">
              <a><%= link_to 'sign up', new_user_registration_path, class: "nav-link", style: "color: white;" %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <br><br><br>

    <%= yield %>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

  </body>
</html>
