<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <% if current_user.has_role?(:admin) %>
        <th>User</th>
      <% end %>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Location</th>
      <th>Price per day</th>
      <th>Price per km</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <% if current_user.has_role?(:admin) %>
          <td><%= car.user.id %></td>
        <% end %>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.full_address %></td>
        <td><%= car.price_per_day %></td>
        <td><%= car.price_per_km %></td>
        <td><%= link_to 'Show', car %></td>
        <% if current_user.has_role?(:admin) %>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Car', new_car_path %>
