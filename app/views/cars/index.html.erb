

<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <% if current_user.has_role?(:admin) %>
        <th>User</th>
      <% end %>

      <th>User</th>


      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Location</th>
      <th>Price per day</th>
      <th>Price per km</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <% if current_user.has_role?(:admin) %>
          <td><%= car.user.firstname %></td>
        <% end %>
        <td><%= image_tag car.image_url(:thumb) %></td>
        <td><%= car.user.firstname %></td>

        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.full_address %></td>
        <td><%= car.price_per_day %></td>
        <td><%= car.price_per_km %></td>
        <td><%= link_to 'Show', car %></td>
        <% if current_user.has_role?(:admin) %>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Car', new_car_path %>
<br>

<div class="m-2">
  <%= form_tag cars_path, method: :get, class: "form-inline mb-3" do %>
      <%= text_field_tag :user_location, '', placeholder: "Your location", class: "form-control", style: "width: 150px;" %>
      <%= submit_tag "Go", class: "btn btn-primary ml-2", style: "width: 90px;" %>
  <% end %>
</div>

<style>
  /* Always set the map height explicitly to define the size of the div
   * element that contains the map. */
  #map {
    height: 100%;
  }
  /* Optional: Makes the sample page fill the window. */
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
</style>

<div id="map"></div>
  <script>




    var map;
    function initMap() {

      map = new google.maps.Map(document.getElementById('map'), {
        zoom: 10,
        center: new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>),
        mapTypeId: 'roadmap'
      });

      var iconBase = 'https://maps.google.com/mapfiles/kml/shapes/';
      var icons = {
        info: {
          icon: '/1x1.png'
        }
      };

      var features = [
        <% @cars.each do |car| %>
        {
          position: new google.maps.LatLng(<%= car.latitude %>, <%= car.longitude %>),
          icon: 'info',
          url: '/cars/<%=car.id%>',
          image: '<%= car.image %>',
          make: '<%= car.make %>',
          model: '<%= car.model %>',
          price_per_day: '<%= car.price_per_day %>',
          price_per_km: '<%= car.price_per_km %>',

        },
        <% end %>
      ];

      // Create markers.
      features.forEach(function(feature) {
        var contentString =
          '<div class="d-flex info-window" onclick="window.location=\''+feature.url+'\'">'+
            '<div class="">'+
              '<span  style="width:70">    <img src='+feature.image+'>    </span>' +
            '</div>'+
            '<div class="">'+
              '<span class="">    '+feature.make+'     </span>'+
              '<span class="">    '+feature.model+'     </span>'+
              '<br>'+
              '<span class="">    '+feature.price_per_day+'     </span>'+
              '<span class="">    '+feature.price_per_km+'     </span>'+
            '</div>'+
          '</div>';

        var infowindow = new google.maps.InfoWindow({
         content: contentString
           });

        // Can delete this now?
        var marker = new google.maps.Marker({
          position: feature.position,
          map: map,
          icon: icons['info'].icon,


        });

         infowindow.open(map, marker);
      });
    }
  </script>
  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDSl2bo0vFAwrntL4R4GybQWzqHNSg8_9o&callback=initMap">
  </script>
