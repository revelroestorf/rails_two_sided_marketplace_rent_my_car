<%= form_with(model: car, local: true) do |form| %>

  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container d-flex justify-contents-center" style="width:200px;">
    <div class="mt-5">

      <%= form.text_field :make, placeholder: "Make", class: "mb-2 form-control form-control-sm"  %>
      <%= form.text_field :model, placeholder: "Model", class: "mb-2 form-control form-control-sm"   %>
      <%= form.number_field :year, placeholder: "Year", class: "mb-2 form-control form-control-sm"   %>
      <%= form.text_field :full_address, placeholder: "Full Address", class: "mb-2 form-control form-control-sm"   %>
      <%= form.text_field :price_per_day, placeholder: "Price per day", class: "mb-2 form-control form-control-sm"   %>
      <%= form.text_field :price_per_km, placeholder: "Price per km", class: "mb-2 form-control form-control-sm"   %>
      <%= form.file_field :image, class: "mb-2 form-control form-control-sm" %>
      <%= form.submit "List it", class: "btn btn-sm btn-primary ml-2 form-inline" %>
    </div>
  </div>

<% end %>
