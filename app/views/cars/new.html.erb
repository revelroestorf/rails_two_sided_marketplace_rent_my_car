<div class="background-image" style="height:100vh;">

  <div class="d-flex justify-content-center align-items-end" style="height:52%;">

    <div class="mb-3" style="width:250px;">

      <%= form_for @car, url: {controller: 'cars', action: 'create'} do |f| %>

        <% if @car.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>
            <ul>
            <% @car.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.text_field :make, placeholder: "Make", class: "mb-2 form-control form-control-sm"  %>
        <%= f.text_field :model, placeholder: "Model", class: "mb-2 form-control form-control-sm"   %>
        <%= f.number_field :year, placeholder: "Year", class: "mb-2 form-control form-control-sm"   %>
        <%= f.text_field :full_address, placeholder: "Full Address", class: "mb-2 form-control form-control-sm"   %>
        <%= f.number_field :price_per_day, placeholder: "$ Price per day", class: "mb-2 form-control form-control-sm"   %>
        <%= f.number_field :price_per_km, step: :any, placeholder: "$ Price per km", class: "mb-2 form-control form-control-sm" %>
        <%= f.file_field :image, class: "mb-2 form-control form-control-sm" %>

    </div>
  </div>

        <div class="d-flex justify-content-center">
          <div class="d-flex justify-content-between" style="width:250px;">
            <%= link_to 'Back', cars_path, class: "btn btn-dark", style: "color: white; width: 90px;" %>
            <%= f.submit "List it", class: "btn btn-primary form-inline", style: "color: white; width: 90px;" %>
          </div>
        </div>

      <% end %>
</div>
